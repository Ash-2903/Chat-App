<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_app"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        style="@style/app_bar">

        <TextView
            android:id="@+id/main_navbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app"
            style="@style/app_bar"
            android:layout_weight="5.5"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/editBtn"
            android:layout_width="@dimen/dp21"
            android:layout_height="@dimen/dp21"
            android:layout_gravity="center_vertical"
            android:background="@android:drawable/ic_menu_edit"
            android:foregroundGravity="right" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:id="@+id/userPfp"
        android:layout_margin="@dimen/dp20"
        android:src="@drawable/profile"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uName"
        android:text="@string/username"
        android:gravity="center"
        android:textSize="23sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uNameEdit"
        android:text="@string/username"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/bg_app"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bio"
        android:text="bio"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp15"
        android:gravity="center"
        android:textColor="@color/subText_grey_dGrey"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bioEdit"
        android:text="bio"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp17"
        android:gravity="center"
        android:background="@color/bg_app"
        android:textColor="@color/subText_grey_dGrey"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/dp25"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginEnd="@dimen/dp5"
        android:background="@color/subText_grey_dGrey"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        app:cardCornerRadius="@dimen/dp10"
        app:cardBackgroundColor="@color/bg_app"
        app:cardElevation="@dimen/dp10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp10"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ashrithaherle2903@gmail.com"
                android:textColor="@color/darker_blue"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginEnd="@dimen/dp15"
            app:cardCornerRadius="@dimen/dp10"
            app:cardBackgroundColor="@color/bg_app"
            app:cardElevation="@dimen/dp10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date-Of-Birth"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="29-01-2003"
                    android:id="@+id/dobDisplay"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp5"
                    android:visibility="gone"
                    android:textColor="@color/darker_blue"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/dobInput"
                    android:layout_width="@dimen/dp80"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/calender_btn"
                    android:src="@android:drawable/ic_menu_my_calendar" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="@dimen/dp10"
            app:cardBackgroundColor="@color/bg_app"
            app:cardElevation="@dimen/dp10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Gender"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp5"
                    android:gravity="center"
                    android:textColor="@color/darker_blue"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="@dimen/dp80"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp5"
                    android:background="@color/tabL_grey_lGray"
                    android:layout_gravity="center"
                    android:entries="@array/spinner_items_gender"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        app:cardCornerRadius="@dimen/dp10"
        app:cardBackgroundColor="@color/bg_app"
        app:cardElevation="@dimen/dp10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="@dimen/dp5"/>



    </androidx.cardview.widget.CardView>

</LinearLayout>