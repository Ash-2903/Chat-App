<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChatApplicationChatterly" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="Theme.ChatApplicationChatterly" parent="Base.Theme.ChatApplicationChatterly" />

    <!--Slide Animation-->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


    <!--    style for app bar-->
    <style name="app_bar">
        <item name="android:background">@color/dark_grey</item>
        <item name="android:padding">@dimen/dp7</item>
        <item name="fontFamily">@font/merriweather_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@color/dark_grey</item>
    </style>

    <!--    background of the whole app-->
    <color name="bg_app">@color/bg_black</color>

    <!--    sign up page-->
    <style name="sign_up">
        <item name="hintTextColor">@color/bg_grey_light</item>
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="textFillColor">@color/white</item>
    </style>

    <!--    Tab Layout-->
    <color name="tabL_grey_lGray">#393E46</color>
    <color name="tabText_blue_lBlue">#2C74B3</color>
    <color name="tabText_white_grey">#D1D1D1</color>

    <!--    Recycler View-->
    <color name="rView_white_black">@color/white</color>

    <!--    Chats-->
    <color name="chat_texts">@color/white</color>
    <color name="outgoing_chats">@color/light_blue</color>

    <!--    straight line-->
    <color name="line_grey_black">@color/bg_grey_dark</color>

    <!--    color change on long press-->
    <color name="longPress">@color/bg_grey_dark</color>

    <!--    sub texts-->
    <color name="subText_grey_dGrey">@color/dark_grey</color>

    <!--    calender button color-->
    <color name="calender_btn">@color/bg_grey_dark</color>

</resources>